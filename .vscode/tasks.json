{
    // sudo apt install python3-colcon-clean
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Colcon: Build",
            "type": "shell",
            "linux": {
                "command": "colcon build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Build [Symlink]",
            "type": "shell",
            "linux": {
                "command": "colcon build --symlink-install"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Build Pkg",
            "type": "shell",
            "linux": {
                "command": "colcon build --packages-select ${input:ros_build_pkg}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Build Pkg [Symlink]",
            "type": "shell",
            "linux": {
                "command": "colcon build --packages-select ${input:ros_build_pkg} --symlink-install"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Build Pkg Ignore",
            "type": "shell",
            "linux": {
                "command": "colcon build --packages-ignore  ${input:ros_ignore_pkg}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Build Pkg Ignore [Symlink]",
            "type": "shell",
            "linux": {
                "command": "colcon build --packages-ignore  ${input:ros_ignore_pkg} --symlink-install"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean Build",
            "type": "shell",
            "linux": {
                "command": "colcon clean workspace -y"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "ROS: Create Package",
            "type": "shell",
            "linux": {
                "command": "ros2 pkg create ${input:ros_pkg} --dependencies ${input:ros_pkg_dep} --build-type ${input:ros_build} --license ${input:ros_pkg_lic} --maintainer-name bonnybk --maintainer-email bonnybabukachappilly@gmail.com"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/src"
            },
            "problemMatcher": []
        },
        // GROUP TASKS
        {
            "label": "Colcon: Clean & Build",
            "dependsOn": [
                "Colcon: Clean Build",
                "Colcon: Build",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean & Build [Symlink]",
            "dependsOn": [
                "Colcon: Clean Build",
                "Colcon: Build [Symlink]",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean, Create pkg & Build",
            "dependsOn": [
                "Colcon: Clean Build",
                "ROS: Create Package",
                "Colcon: Build",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "Colcon: Clean, Create pkg & Build [Symlink]",
            "dependsOn": [
                "Colcon: Clean Build",
                "ROS: Create Package",
                "Colcon: Build [Symlink]",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        // RUNNING PROGRAMS
        {
            "label": "Launch: robot_handler | websocket_handler",
            "type": "shell",
            "linux": {
                "command": "source ./install/setup.bash && ros2 launch robot_handler websocket.launch.py"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Launch: robot_handler | api_service_handler",
            "type": "shell",
            "linux": {
                "command": "source ./install/setup.bash && ros2 launch robot_handler api_service.launch.py"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Launch: api_client | api_service",
            "type": "shell",
            "linux": {
                "command": "source ./install/setup.bash && ros2 launch api_client api_service.launch.py"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Launch: robot_controller | controller",
            "type": "shell",
            "linux": {
                "command": "source ./install/setup.bash && ros2 launch robot_controller robot_controller.launch.py"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        {
            "label": "Launch: websocket_client | ws_client",
            "type": "shell",
            "linux": {
                "command": "source ./install/setup.bash && ros2 launch websocket_client websocket_client.launch.py"
            },
            "options": {
                "cwd": "${workspaceFolder}/${config:ros_workspace}/"
            },
            "problemMatcher": []
        },
        // RUNNING PROGRAMS GROUPS
    ],
    "inputs": [
        {
            "id": "ros_build",
            "type": "promptString",
            "description": "ROS build type",
            "default": "ament_python"
            // ament_cmake ament_python
        },
        {
            "id": "ros_build_pkg",
            "type": "promptString",
            "description": "ROS build package",
            "default": ""
            // ament_cmake ament_python
        },
        {
            "id": "ros_ignore_pkg",
            "type": "promptString",
            "description": "ROS ignore package",
            "default": "communications"
            // ament_cmake ament_python
        },
        {
            "id": "ros_pkg",
            "type": "promptString",
            "description": "ROS package name"
        },
        {
            "id": "ros_pkg_dep",
            "type": "promptString",
            "description": "ROS package dependencies"
        },
        {
            "id": "ros_pkg_lic",
            "type": "promptString",
            "description": "ROS package license",
            "default": "GPL-3.0-only"
            // Apache-2.0, BSL-1.0, BSD-2.0, BSD-2-Clause,
            // BSD-3-Clause, GPL-3.0-only,
            // LGPL-3.0-only, MIT, MIT-0
        },
    ]
}